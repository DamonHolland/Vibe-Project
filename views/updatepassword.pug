extends layout

block content

  h3=title
  <form method="POST" id="updateForm">
    <div>
      <p>Current Password:</p>
      input(class=passField, type="password", name="currentpassword", id="currentpassword", placeholder="Current Password")
    </div>
    <div>
      <p>New Password:</p>
      input(class=passField, type="password", name="newpassword", id="newpassword", placeholder="New Password")
    </div>
    <div>
      <p>Confirm New Password:</p>
      input(class=passField, type="password", name="newpasswordconfirm", id="newpasswordconfirm", placeholder="Confirm Password")
    </div>
    <div>
    pre=errorbox
    <div>
      input(class="button", type="submit", value="Confirm")
      <br>
      <button class="button" type="button" onclick="location.href='/update'">Return</button>
    </div>