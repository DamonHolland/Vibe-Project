extends layout

block content
  h3=title
  meta(charset='utf-8')
  <form method="POST">
    <div class="questionBox" id="display">
      <p> Which one is better?</p>
    </div>

    <div>
      input(class="firstOption", type="radio", name="firstOption", id="showFirstOption", value=pickedFristOption)
      <label for="firstOption", class="optionBox">Pizza</label><br>

      input(class="secondOption", type="radio", name="secondOption", id="showSecondOption", value=pickedSecondOption)
      <label for="secondOption", class="optionBox">Burger</label><br>
    </div>
    input(id="skipButton", type="submit", value="Skip")
    input(class="submitButton", type="submit", value="Submit")
  </form>
  
