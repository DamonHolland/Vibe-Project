extends layoutNoHamburger

block content
  <div>
    <h3>Get your dilemmas answered.</h3>
    <h3>Put your finger on the pulse of the public's opinion on issues you care about.</h3>
    <h3>Finally settle the argument.</h3>
    <h3>Share your opinions.</h3>
    <h4 id='typeQuestions'></h4>
  </div>
  <br>
  <hr>
  <br>
  <div>
    h3=title
    <form method="POST">
    <div>
      <p>Username:</p>
      <input type="text" name="username" id="username" placeholder="Username">
    </div>
    <div>
      <p>Password:</p>
      <input type="password" name="password" id="password" placeholder="Password">
    </div>
    <div>
      <input type="checkbox" name="rememberme" id="rememberme">
        <label for="rememberme">Remember me</label>
        <br>
    </div>
      pre=errorbox
      <input class="button" type="submit" value="Sign In">
      <br>
      <div>
        <a class="recover" href='/recover'>Forgot Password?</a>
      </div>
    </form>
    <br>
    <input class="button" onclick="location.href='/register'" type="submit" value="Sign Up">
  </div>
  script(src='/javascripts/typingQuestions.js')