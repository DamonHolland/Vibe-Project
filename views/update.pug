extends layout

block content

  h3=title
  <form method="POST">
    <div>
      <p>First Name:</p>
      input(class=firstField, type="text", name="firstname", id="first", placeholder="John", value=first, disabled=firstFieldDisabled)
      span(class="editField", onclick="location.href='/update/firstName'") #{firstFieldLabel}
    </div>
    <div>
      <p>Last Name:</p>
      input(class=lastField, type="text", name="lastname", id="last", placeholder="Doe", value=last, disabled=lastFieldDisabled)
      span(class="editField", onclick="location.href='/update/lastName'") #{lastFieldLabel}
    </div>
    <div>
      <p>Email:</p>
      input(class=emailField, type="text", name="email", id="email", placeholder="john.doe@gmail.com", value=email, disabled=emailFieldDisabled)
      span(class="editField", onclick="location.href='/update/email'") #{emailFieldLabel}
    </div>
    <div>
      <p>Username:</p>
      input(class=userField, type="text", name="username", id="username", placeholder="Username", value=user, disabled=userFieldDisabled)
      span(class="editField", onclick="location.href='/update/username'") #{userFieldLabel}
    </div>
    <div>
    pre=errorbox
    <div>
      <button class="button" type="button" onclick=window.history.back()>Cancel</button>
    </div>